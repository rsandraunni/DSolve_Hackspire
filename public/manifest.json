{
    "manifest_version": 3,
    "name": "Eco-Friendly Shopping Assistant",
    "version": "1.0",
    "description": "Suggests sustainable alternatives while shopping online.",
    "permissions": ["activeTab","scripting"],
    "host_permissions": ["*://*.amazon.com/*"],
    "action":{
        "default_popup": "popup.html"
    },
    "background":{
        "service_worker":"background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://.amazon.com/*"],
            "js": ["content.js"]
        }
    ]
  }
  